def main():   
    lista_vazia = []
    
    for recebe in range(0, 10):
        numero = int(input("Digite um número: ")) 
        lista_vazia.append(numero)
        
    print("numeros pares: ")
        
    for i in range(len(lista_vazia)):
     if i % 2 == 0:
        
         print("Lista de números pares: ", " ".join(map(str,lista_vazia [i])))
    
if __name__ == "__main__":
  main()


